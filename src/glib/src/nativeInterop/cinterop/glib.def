headers = glib.h
package = glib
headerFilter = glib/*

# pkg-config --cflags glib-2.0
compilerOpts.linux = -I/usr/include/glib-2.0
compilerOpts.linux_x64 = -I/usr/lib/x86_64-linux-gnu/glib-2.0/include -I/usr/lib64/glib-2.0/include

# pkg-config --libs glib-2.0
linkerOpts.linux = -L/usr/local/lib -lglib-2.0
linkerOpts.linux_x64 = -L/usr/lib/x86_64-linux-gnu -L/usr/lib64